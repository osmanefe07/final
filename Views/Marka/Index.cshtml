@using final.ViewModels;
@{
    ViewData["Title"] = "Index";
}
@model List<MarkaModel>
<h2>Araçlar Listesi</h2>
<hr />
<table class="table table-hover">
    <thead>
        <tr>
            <th>SN</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Açıklama</th>
            <th>Fiyat</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td>@item.Description</td>
                <td>@item.Price</td>
            </tr>
            i++;
        }

    </tbody>
</table>
