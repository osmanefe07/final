@using final.ViewModels;


@model List<CarModel>
<h2>Araçlar</h2>
<hr />
<a asp-action="Insert" class="btn btn-primary">Ekle</a>
<table class="table table-hover">
    <thead>
        <tr>
            <th>NO</th>
            <th>Marka</th>
            <th>Model</th>
            <th>Fiyat</th>
            <th>Açıklama</th>
            <th>Uygunluk</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @{
            int i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.Name</td>
                <td>@item.Title</td>
                <td>@item.Price</td>
                <td>@item.Description</td>

                <td>

                    @if (item.Status)
                    {
                        <a asp-action="ChangeStatus" asp-route-id="@item.Id" asp-route-st="False"><span class="badge bg-success">Uygun</span></a>
                    }
                    else
                    {

                        <a asp-action="ChangeStatus" asp-route-id="@item.Id" asp-route-st="True"> <span class="badge bg-danger">Müşteride</span></a>
                    }


                </td>
                <td>
                    <a asp-action="Detail" asp-route-id="@item.Id" class="btn btn-info">Detay</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Düzenle</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Sil</a>
                </td>
            </tr>

            i++;

        }

    </tbody>
</table>